{
  "name": "common-react-scrollbar",
  "version": "0.0.2",
  "description": "Common React Scrollbar",
  "keywords": [
    "react",
    "scrollbar"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/neilning-xc/common-react-scrollbar"
  },
  "scripts": {
    "dev": "concurrently \"npm run start\" \"npm run serve\"",
    "serve": "vite serve example -c example/vite.config.js",
    "build": "rollup -c",
    "start": "rollup -c --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write src/**/*.ts src/**/*.tsx",
    "prepare": "husky"
  },
  "author": "Neil Ning",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "@playwright/test": "1.50.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "12.1.2",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.4",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@vitejs/plugin-react": "4.3.4",
    "concurrently": "9.1.2",
    "husky": "9.1.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.4.3",
    "postcss": "8.5.2",
    "prettier": "3.4.2",
    "rollup": "^4.34.3",
    "rollup-plugin-postcss": "4.0.2",
    "ts-jest": "29.2.5",
    "tslib": "2.8.1",
    "typescript": "5.7.3",
    "vite": "6.1.0"
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}": [
      "npm run format"
    ]
  }
}
